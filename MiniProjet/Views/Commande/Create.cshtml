@model MiniProjet.Models.Commande

@{
    ViewData["Title"] = "Create";
}
<style>


    h1 {
        font-weight: bold;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center; /* Centrer le texte */
        margin-bottom: 20px; /* Espacement en bas */
    }

    .cards {
        width: 800px ;
        height: auto;
        padding: 20px;
        margin:0 auto ;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
        background: linear-gradient(to bottom right, #ffffff, #e0e0e0);
    }

    .form-group, .card {
        width: 700px ;
        text-align: center ;
        margin: 10px auto ;
        margin-left: 40px ;
        
    }
</style>
<h1>Create Commande</h1>


<hr />
<div class="cards">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCommande" class="control-label"></label>
                <input asp-for="DateCommande" class="form-control" />
                <span asp-validation-for="DateCommande" class="text-danger"></span>
            </div>

            

            <!-- Affichage des informations des articles ajoutés au panier -->
            @foreach (var panierArt in Model.PanierArticles)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Article: @panierArt.Article.Designation</h5>
                        <p class="card-text">Prix: @panierArt.Article.Prix</p>
                        <p class="card-text">Quantité: @panierArt.Quantity</p>
                    </div>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
